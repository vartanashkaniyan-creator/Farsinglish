                            if (!regex.test(this.value)) {
                                return { valid: false, error: 'Ù‚Ø§Ù„Ø¨ Ù†Ø§Ù…Ø¹ØªØ¨Ø± Ø§Ø³Øª' };
                            }
                        }
                        
                        return { valid: true };
                    },
                    getLength: function() {
                        return this.value.length;
                    },
                    isEmpty: function() {
                        return !this.value.trim();
                    }
                };
            }
